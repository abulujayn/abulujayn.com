---
layout: base.njk
---

<h2>{{ title }}</h2>

{{ content | safe }}

{% if tags %}
    {% for tag in tags | filterTags %}
        <a href="/posts/{{ tag | slug }}/">#{{ tag }}</a>
    {% endfor %}
{% endif %}
<hr />
<em>Published on <span title="{{ page.date | date }}">{{ page.date | hijri(date_shift) }}</span>{% if using %} using {{ using }}{% endif %}</em>