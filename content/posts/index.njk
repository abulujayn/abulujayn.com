---
layout: base.njk
title: posts
eleventyImport:
    collections: ["posts"]
---

<h2>Posts</h2>
{% for tag in collections | getKeys | tagsOnly %}
    <a href="/posts/{{ tag | slug }}/">#{{ tag }}</a>
{% endfor %}
<ul>
    {% for post in (collections.posts | reverse) %}
        {% if post.data.public %}
            <li>
                <span title="{{ post.date | date }}">{{ post.date | hijri(post.data.date_shift) }}</span>
                -
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>